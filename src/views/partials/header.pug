header
  .masthead
    .masthead-container
      .masthead-start
        button.guide-menu
          svg(viewBox="0 0 100 80", width="20", height="20")
            rect(width="100", height="4") 
            rect(y="30", width="100", height="4") 
            rect(y="60", width="100", height="4")
        a.svttube-logo(href="/")
          i.fab.fa-youtube.logo-icon
          i SvtTube
      .searchbox
        .searchbox-form
          form(method="GET", action="/search")
            input(type="text", name="keyword", placeholder="검색")
            button(type="submit", value="search now!")
              i.fas.fa-search
      nav.masthead-end
        ul
          if loggedIn
            .loggedinUser-icons-wrap
              li
                a(href=`/users/${loggedInUser._id}`, title="My videos")
                  #myvideos-icon.loggedin-user-icons
              li 
                a(href="videos/upload", title="Upload video")
                  #upload-video-icon.loggedin-user-icons

              li 
                a(href="/users/logout", title="Log out")
                  #logout-icon.loggedin-user-icons
            li
              a(href="/users/edit", title="Edit profile")
                .user-profilepic
                    img(src='/' + loggedInUser.avatarUrl,crossorigin)
          else
            li
              button.loginbtn.svt-icon
                a(href="/login")
                  i.far.fa-user-circle
                  i 로그인
  .guide-container
    .guide-wrap
      .section
        ul
          li 
            i.fas.fa-home
            span 홈
          li
            i.far.fa-compass
            span 탐색
          li
            i.far.fa-caret-square-right
            span 구독
          hr
          li
            i.far.fa-hdd
            span 보관함
          li
            i.far.fa-clock
            span 시청기록
          hr
          li
            i.far.fa-thumbs-up
            span 좋아요 표시한 동영상
          hr
    #footer-wrap
      footer &copy; #{ new Date().getFullYear() } SVTtube
