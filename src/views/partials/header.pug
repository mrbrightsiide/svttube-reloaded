header
  .masthead
    .masthead-container.basic
      .masthead-start
        button#guide_menu_btn.guide-menu
          svg(viewBox="0 0 100 80", width="20", height="20")
            rect(width="100", height="4") 
            rect(y="30", width="100", height="4") 
            rect(y="60", width="100", height="4")
        a.svttube-logo(href="/")
          i.fab.fa-youtube.logo-icon
          img(src="/static/img/logo.svg", alt="")
      .searchbox
        .searchbox-form
          form(method="GET", action="/search")
            input(type="search", name="keyword", placeholder="검색")
            button(type="submit", value="search now!")
              i.fas.fa-search
      nav.masthead-end
        ul.icons-wrap
          if loggedIn
            li
              a(title="Search")
                img#search-ico.user-icons(src="/static/img/search.svg")
            li
              a(href=`/users/${loggedInUser._id}`, title="My videos")
                img#myvideos-ico.user-icons(src="/static/img/myvideos.svg")
            li 
              a(href="/videos/upload", title="Upload video")
                img#upload-ico.user-icons(src="/static/img/uploadvideos.svg")

            li 
              a(href="/users/logout", title="Log out")
                img#logout-ico.user-icons(src="/static/img/logout.svg")
            li
              a(href="/users/edit", title="Edit profile")
                .user-profilepic
                  img(src=`/${loggedInUser.avatarUrl}`, crossorigin)
          else
            li
              a(title="Search")
                img#search-ico.user-icons(src="/static/img/search.svg")
            li
              button.loginbtn.svt-icon
                a(href="/login")
                  i.far.fa-user-circle
                  i 로그인
  .guide-container
    .modal-logo
      button#guide_menu_btn.guide-menu
        svg(viewBox="0 0 100 80", width="20", height="20")
          rect(width="100", height="4") 
          rect(y="30", width="100", height="4") 
          rect(y="60", width="100", height="4")
      a.svttube-logo(href="/")
        i.fab.fa-youtube.logo-icon
        img(src="/static/img/logo.svg", alt="")
    .guide-wrap
      .section
        ul
          li 
            i.fas.fa-home
            p 홈
          li
            i.far.fa-compass
            p 탐색
          li
            i.far.fa-caret-square-right
            p 구독
          hr
          li
            i.far.fa-hdd
            p 보관함
          li
            i.far.fa-clock
            p 시청기록
          hr

    #footer-wrap
      footer &copy; #{ new Date().getFullYear() } SVTtube
