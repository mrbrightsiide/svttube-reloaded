header
.masthead-container
  a(href="/")
    i.fab.fa-youtube
  nav
    ul
      if loggedIn
        li 
          a(href=`/users/${loggedInUser._id}`) My Videos
        li 
          a(href="/users/logout") Logout
        li 
          a(href="videos/upload") Upload Videos
        li 
          a(href="/search") Search  
        li
          a(href="/users/edit" title="edit profile")
            .user-profilepic
              img(src="/"+loggedInUser.avatarUrl, width="100", height="100")

      else
        li 
          a(href="/join") Join
        li 
          a(href="/login")
            .loginbtn Login
        li 
          a(href="/search") Search
