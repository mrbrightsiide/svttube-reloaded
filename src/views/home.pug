extends base.pug
include mixins/video

block content
  .page-manager
    .contents-wrap
      .category-bar
        ul
          li 전체
          li 음악
          li 랩
          li 요리
          li 애완동물
          li 예능
          li 최근에 업로드된 동영상
      .masthead_ad
        .svt-promo-banner
          .banner
            .banner-text
              h1 Check out the new song<br>"Pretty you" by Seventeen!
                a(href="http://localhost:4000/videos/61d433efa11ad303fa6d6cbe")
              a#banner-btn(
                href="http://localhost:4000/videos/61d433efa11ad303fa6d6cbe"
              )
                .banner-btn Check out now!
            .video
              video(
                src="/uploads/videos/9961300332fd80d2005df5560d6902cc",
                controls,
                autoplay,
                muted
              )
        #close-btn
      .contents-container
        .contents
          .video-wrap
            each video in videos
              +video(video)
            else
              li sorry nothing found.
