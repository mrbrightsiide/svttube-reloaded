extends layouts/base.pug
include mixins/video

block content
  .page-manager
    #contents-wrap.contents-wrap
      .category-bar
        ul#category_bar_chips
          li
            a.category-chip(href="/category/all") 전체
          li
            a.category-chip(href="/category/rap") 랩
          li
            a.category-chip(href="/category/pet") 애완동물
          li
            a.category-chip(href="/category/music") 음악
          li
            a.category-chip(href="/category/cooking") 요리
          li
            a.category-chip(href="/category/game") 게임
          li
            a.category-chip(href="/category/recent") 최근에 업로드된 동영상
      .masthead_ad
        .svt-promo-banner
          .banner
            .banner-content
              h1#banner-txt
              a#banner-btn
                #default-btn Check out now!
            #videoContainer
              video#banner-video(autoplay, muted, loop, crossorigin)
        #close-btn
      .contents-container
        .contents
          #video-wrap.video-wrap

block scripts
  script(src="/static/js/videoCategory.js")
  script(src="/static/js/handleAd.js")
