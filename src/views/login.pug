extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
            input(placeholder="username" name="username", type="text",required,unique)
            input(placeholder="password" name="password", type="password",required)
            input(type="submit", value="log in")

    hr
    div 
        span Don't have an account?
        a(href="/join") Join now &rarr;