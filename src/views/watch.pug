extends layouts/base

block content
  #watch-page-wrap
    .player-container
      #videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        #videoControls.videoControls
          input#timeline.videoControls__timeline(
            type="range",
            step="0.01",
            value="0",
            min="0"
          )
          .controls-btn-wrap
            .play-btn-wrap
              .videoControls__play
                span#play.videoControls__playBtn
                  i.fas.fa-play
                .videoControls__time
                  span#currenTime 00:00:00
                  span #{ " / " }
                  span#totalTime 00:00:00
              .videoControls__volume
                span#mute
                  i.fas.fa-volume-up
                input#volume(
                  type="range",
                  step="0.01",
                  value=0.5,
                  min="0",
                  max="1"
                )
            div
              #fullScreen
                i.fas.fa-expand
      .video__data
        p.vidieo__title= video.title
        small.video__owner Uploaded by
          a(href=`/users/${video.owner._id}`)= video.owner.name
        small.video__createdAt= new Date(video.createdAt).toLocaleDateString("ko-kr", { weekday: "long", year: "numeric", month: "long", day: "numeric" })
        if String(video.owner._id) === String(loggedInUser._id)
          a(href=`${video.id}/edit`) Edit Video &rarr;
          br
          a(href=`${video.id}/delete`) Delete Video &rarr;
      if loggedIn
        .video__add-comments
          form#commentForm.video__comment-form
            textarea(
              cols="30",
              rows="10",
              placeholder="Write a nice commment..."
            )
            button Add Comment
    .related-container
      div
        h2 title
        p 내용
      div
        h2 title
        p 내용
      div
        h2 title
        p 내용
    .comment-container
      .video__comments
        ul#comment-wrap
          each val in video.comments.reverse()
            li#comment.video__comment(data-id=val._id)
              i.fas.fa-comment
              span #{ val.text }
              if loggedIn && String(val.owner) === String(loggedInUser._id)
                button.delete_comment_btn ❌

block scripts
  script(src="/static/js/videoPlayer.js")
  if loggedIn
    script(src="/static/js/commentSection.js") 
