extends layouts/base
include mixins/video

block content
  #watch-page-wrap
    #videoContainer.basic(data-id=video._id)
      video(src="/" + video.fileUrl)
      #videoControls.videoControls
        input#timeline.videoControls__timeline(
          type="range",
          step="0.01",
          value="0",
          min="0"
        )
        .controls-btn-wrap
          .play-btn-wrap
            .videoControls__play
              span#play.videoControls__playBtn
                i.fas.fa-play
              .videoControls__time
                span#currenTime 00:00:00
                span #{ " / " }
                span#totalTime 00:00:00
            .videoControls__volume
              span#mute
                i.fas.fa-volume-up
              input#volume(
                type="range",
                step="0.01",
                value=0.5,
                min="0",
                max="1"
              )
          div
            a(title="Theater mode", basic)
              #theater
            a(title="Fullscreen")
              #fullScreen
                i.fas.fa-expand
    .player-container.basic
      .video__data
        small.hashtags= String(video.hashtags).split(",").join(" ")
        h1.video__title= video.title
        .video-info
          small #{ video.meta.views } views
          small.video__createdAt= new Date(video.createdAt).toLocaleDateString("ko-kr", { weekday: "long", year: "numeric", month: "long", day: "numeric" })
          p= video.description
        .owner-info-wrap
          .owner-profile
            div
              img(src=`/${video.owner.avatarUrl}`)
            div
              h3= video.owner.name
              p 0 subscribers
          button SUBSCRIBE
        if String(video.owner._id) === String(loggedInUser._id)
          .edit-video
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;
    .related-container.basic
      each vid in relatedVideos
        +video(vid)
    .comment-container.basic
      span #{ video.comments.length } Comments
      if loggedIn
        .video__add-comments
          form#commentForm.video__comment-form
            .loggedin-user-profile
              img(src=`/${loggedInUser.avatarUrl}`, crossorigin)
            div
              .comment-textarea-wrap
                textarea(cols="30", rows="10", placeholder="Add a commment")
              button(type="submit", value="add comment") Comment
      .video__comments
        ul#comment-wrap
          each comment in video.comments.reverse()
            li#comment.video__comment(data-id=comment._id)
              .comment-content
                a(href=`/users/${comment.owner._id}`) 
                  .comment-avatar
                    img(src=`/${comment.owner.avatarUrl}`)
                .comment-text
                  div
                    span= comment.owner.name
                    span= formatCreatedDate(comment.createAt)
                  span.comment-txt= comment.text
              if loggedIn && String(comment.owner._id) === String(loggedInUser._id)
                button.delete_comment_btn ‚ùå

block scripts
  script(src="/static/js/videoPlayer.js")
  script(src="/static/js/formatCreatedDate.js")
  if loggedIn
    script(src="/static/js/commentSection.js") 
