mixin player(video)
  #videoContainer(class=`${isTheaterMode ? "theater" :"basic"}`, data-id=video._id)
    video(src=video.fileUrl, crossorigin, autoplay)
    #videoControls.videoControls
      input#timeline.videoControls__timeline(
        type="range",
        step="0.01",
        value="0",
        min="0"
      )
      .controls-btn-wrap
        .play-btn-wrap
          .videoControls__play
            span#play.videoControls__playBtn
              i.fas.fa-play
            .videoControls__time
              span#currenTime 00:00:00
              span #{ " / " }
              span#totalTime 00:00:00
          .videoControls__volume
            span#mute
              i.fas.fa-volume-up
            input#volume(
              type="range",
              step="0.01",
              value=0.5,
              min="0",
              max="1"
            )
        div
          a(
            title=`${isTheaterMode ? "Default View" :"Theater Mode"}`,
            data-id=`${isTheaterMode ? "theater" : "basic"}`
          )
            #theater(class=`${isTheaterMode ? "theater" :"basic"}`)
          a(title="Fullscreen")
            #fullScreen
              i.fas.fa-expand
